<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:xiaosw="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.xiaosw.tool.activity.ProgressBarActivity">

    <LinearLayout
        android:id="@+id/row_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.xiaosw.library.widget.GUIProgress
            android:id="@+id/pt_study_progress1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            xiaosw:line_width="3.2"
            xiaosw:circle_radius="12"
            xiaosw:line_segment="top|bottom"
            xiaosw:max="100"
            xiaosw:progress="0"
            xiaosw:orientation="vertical" />

        <com.xiaosw.library.widget.GUIProgress
            android:id="@+id/pt_study_progress2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            xiaosw:line_width="3.2"
            xiaosw:circle_radius="12"
            xiaosw:line_segment="top|bottom"
            xiaosw:max="100"
            xiaosw:progress="80"
            xiaosw:orientation="vertical" />

        <com.xiaosw.library.widget.GUIProgress
            android:id="@+id/pt_study_progress3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            xiaosw:line_width="3.2"
            xiaosw:circle_radius="12"
            xiaosw:line_segment="top|bottom"
            xiaosw:max="100"
            xiaosw:progress="100"
            xiaosw:orientation="vertical" />

        <com.xiaosw.library.widget.GUIProgress
            android:id="@+id/pt_study_progress4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            xiaosw:line_width="3.2"
            xiaosw:circle_radius="12"
            xiaosw:line_segment="left|right"
            xiaosw:max="100"
            xiaosw:progress="0"
            xiaosw:orientation="horizontal" />

        <com.xiaosw.library.widget.GUIProgress
            android:id="@+id/pt_study_progress5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            xiaosw:line_width="3.2"
            xiaosw:circle_radius="12"
            xiaosw:line_segment="left|right"
            xiaosw:max="100"
            xiaosw:progress="40"
            xiaosw:orientation="horizontal" />

        <com.xiaosw.library.widget.GUIProgress
            android:id="@+id/pt_study_progress6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            xiaosw:line_width="3.2"
            xiaosw:circle_radius="12"
            xiaosw:line_segment="left|right"
            xiaosw:max="100"
            xiaosw:progress="100"
            xiaosw:orientation="horizontal" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/row_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/row_1"
        android:layout_marginTop="12dp">

        <com.xiaosw.library.widget.GUIProgressBar
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:minHeight="200dp"
            android:minWidth="200dp"
            android:max="10000"
            android:progress="6000"
            xiaosw:circle_mode="pie_chat"
            xiaosw:textSize="20dp"/>

        <com.xiaosw.library.widget.GUIProgressBar
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:minHeight="200dp"
            android:max="10000"
            android:progress="6000"
            android:minWidth="200dp"
            xiaosw:strokeWidth="10dp"
            xiaosw:angleOffset="-90"
            xiaosw:textSize="400dp"
            xiaosw:indeterminateDuration="5000"/>
    </LinearLayout>

</RelativeLayout>
